@model IEnumerable<lab04_2.Models.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>
<ul class="course">
    @foreach (var v in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @v.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @v.DateTime.ToString("dd")
                </div>
            </div>
            <div class="detail">
                <span class="lecture">
                    @v.Lecture.Name
                </span>
                <span class="category">
                    @v.Category.Name
                </span>
            </div>
            <div class="action">
                <a href="@Url.Action("Edit", "Course", new { id = v.Id})">Edit</a>
                <a class="js-cancel-course" href="#" data-course-id="@v.Id">
                    Cancel
                </a>
            </div>
        </li>
    }
</ul>
@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-cancel-course").click(function)(e) {
                e.preventDefault();
                var link = $(e.target);
                bootbox.confirm("Are you sure to cancel?",
                    function () {
                        $.ajax({
                                url: "/api/courses" + link.attr("data-course-id"),
                                method: "DELETE"
                            })
                            .done(function () {
                                link.parent("li").fadeOut(function () {
                                    $(this).remove();
                                });
                            })
                        .fail(function () {
                                alert("Something failed!");
                            });
                    });
                    
            });
        });

    </script>
}

